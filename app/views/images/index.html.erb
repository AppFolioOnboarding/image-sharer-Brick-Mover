<h1>Hello</h1>
<p>World</p>

<%= link_to "Submit image url", new_image_url %>

<h2>Your most recent images</h2>

<% @recent_images.each do |image|  %>
  <%= image_tag image.link %>
  <span>
    <% image.tags.each do |t| %>
      <%= link_to t != image.tags.last ? "#{t.name}," : t.name, images_url(selected_tag: t.name) %>
    <% end %>
  </span>
  <div>
    <%= link_to 'Delete', image_path(image.id), method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </div>
  <br />
  <br />
<% end %>
